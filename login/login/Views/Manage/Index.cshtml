@model IndexViewModel

@{
    ViewData["Title"] = "Mi perfil";
    //ViewData.AddActivePage(ManageNavPages.Index);
}

<title>Mi Perfil</title>
@Html.Partial("_StatusMessage", Model.StatusMessage)

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Dashboard</h1>
            </div>
        </div>
    </div>
    @*Aqui va el breadcrumb*@
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a  asp-action="Dashboard">Dashboard</a></li>
                    <li><a  asp-action="Index">Mi perfil</a></li>
                    <li class="active">Mis datos</li>
                </ol>
            </div>
        </div>
    </div>
</div>


<div class="content mt-3">
    <div class="animated fadeIn">

        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                   
                    <div class="card-body">
                        <!-- Credit Card -->
                        <div id="pay-invoice">
                            <div class="card-body">
                                <div class="card-title">
                                    <h3 class="text-center">Información</h3>
                                </div>
                                <hr>
                                <form asp-action="Index">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                    <div class="form-group text-center">

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Username">Usuario</label>
                                        <input asp-for="Username" class="form-control" disabled />
                                    </div>
                                    <div class="form-group has-success">
                                        <label asp-for="Email">Correo</label>
                                        @if (Model.IsEmailConfirmed)
        {
                                <div class="input-group">
                                    <input asp-for="Email" class="form-control" />
                                    <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                                </div>
}
else
{
                                <input asp-for="Email" class="form-control" />
                                <button asp-action="SendVerificationEmail" class="btn btn-link">Confirmar Correo Electrónico</button>
}
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="PhoneNumber"></label>
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                              
                                    <div>
                                        <button id="payment-button" type="submit" class="btn btn-lg btn-info btn-block">
                                            <i class="fa fa-save fa-lg"></i>&nbsp;
                                            <span id="payment-button-amount">Guardar</span>
                                            <span id="payment-button-sending" style="display:none">Guardando…</span>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div> <!-- .card -->
            </div><!--/.col-->
        </div>
   </div>
    </div>


        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
